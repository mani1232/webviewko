package = com.github.winterreisender.cwebviewko
headers = bridge.h

# --- Compiler Options ---
# Use C++14 to ensure compatibility with modern headers
compilerOpts = -I. -DWEBVIEW_STATIC

# Windows (MinGW) specific options
compilerOpts.mingw = -DWEBVIEW_EDGE
linkerOpts.mingw = -lole32 -lcomctl32 -lshlwapi -luser32 -lgdi32 -lstdc++

# Linux specific options
compilerOpts.linux = -DWEBVIEW_GTK

# macOS specific options
compilerOpts.osx = -DWEBVIEW_COCOA
linkerOpts.osx = -framework WebKit -framework Cocoa

---

#define WEBVIEW_IMPLEMENTATION

#ifdef _WIN32
    #include <objbase.h>
    #include <shobjidl.h>
#endif

// Include the implementation here.
// Since bridge.h (included by cinterop stub) now includes webview.h,
// the include guards in webview.h will prevent redefinition here.
#include "webview.h"